# LRDA Terraform Variables
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

# AWS Configuration
aws_region = "us-east-1"

# Environment: "staging" or "production"
# staging uses: api-staging.wherereligion.org
# production uses: api.wherereligion.org
environment = "staging"

# Your domain name
domain_name = "wherereligion.org"

# EC2 instance type (t3.small is sufficient for API-only workload)
instance_type = "t3.small"

# Your public IP address for SSH access (use CIDR notation)
# Find your IP: curl ifconfig.me
# Example: ["1.2.3.4/32"]
ssh_allowed_ips = ["YOUR_IP/32"]

# PostgreSQL database password (use a strong, unique password)
db_password = "your_secure_password_here"

# Name of your EC2 key pair (must exist in AWS before running terraform)
# See README.md for instructions on creating a key pair
key_pair_name = "lrda-staging-keypair"
