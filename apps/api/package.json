{
  "name": "@lrda/api",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "bun run dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "sync:users": "bun run src/scripts/sync-users-from-firebase.ts",
    "sync:users:yolo": "bun run src/scripts/sync-users-from-firebase.ts --yolo",
    "sync:from-rerum": "bun run src/scripts/sync-from-rerum.ts",
    "sync:from-rerum:yolo": "bun run src/scripts/sync-from-rerum.ts --yolo",
    "sync:from-rerum:watch": "bun run src/scripts/sync-from-rerum.ts --yolo --watch",
    "sync:from-rerum:full": "bun run src/scripts/sync-from-rerum.ts --yolo --full",
    "sync:to-rerum": "bun run src/scripts/sync-to-rerum.ts",
    "sync:to-rerum:yolo": "bun run src/scripts/sync-to-rerum.ts --yolo",
    "sync:to-rerum:watch": "bun run src/scripts/sync-to-rerum.ts --yolo --watch",
    "sync:bidirectional": "concurrently \"bun run sync:from-rerum:watch\" \"bun run sync:to-rerum:watch\""
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.18.4",
    "@scalar/hono-api-reference": "^0.5.175",
    "better-auth": "^1.3.34",
    "drizzle-orm": "^0.39.3",
    "firebase-admin": "^13.6.0",
    "hono": "^4.7.4",
    "pg": "^8.15.6",
    "pino": "^9.8.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/pg": "^8.11.14",
    "bun-types": "^1.2.8",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.31.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.8.3",
    "vitest": "^3.0.5"
  }
}
