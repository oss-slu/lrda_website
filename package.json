{
  "name": "lrda_website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:api": "pnpm --filter @lrda/api dev",
    "dev:full": "pnpm clear-ports && concurrently -k -n api,web -c blue,cyan \"pnpm dev:api\" \"sleep 3 && pnpm dev\"",
    "api:docker:up": "pnpm --filter @lrda/api docker:up",
    "api:docker:down": "pnpm --filter @lrda/api docker:down",
    "api:db:generate": "pnpm --filter @lrda/api db:generate",
    "api:db:migrate": "pnpm --filter @lrda/api db:migrate",
    "api:db:push": "pnpm --filter @lrda/api db:push",
    "api:db:studio": "pnpm --filter @lrda/api db:studio",
    "clear-ports": "lsof -ti:3000 -ti:3001 -ti:3002 2>/dev/null | xargs kill -9 2>/dev/null || true",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "pnpm --filter web lint",
    "lint:fix": "pnpm --filter web lint:fix",
    "format": "prettier --write .",
    "test": "pnpm --filter web test",
    "test:unit": "pnpm --filter web test:unit",
    "test:e2e": "pnpm --filter web test:e2e",
    "test:e2e:ui": "pnpm --filter web test:e2e:ui",
    "test:e2e:headed": "pnpm --filter web test:e2e:headed",
    "test:e2e:debug": "pnpm --filter web test:e2e:debug",
    "test:e2e:install": "pnpm --filter web test:e2e:install",
    "clear-port": "./scripts/clear-port.sh",
    "setup": "cp packages/web/.env.example packages/web/.env.local && cp apps/api/.env.example apps/api/.env && echo 'Created .env files - ready for pnpm dev:full'"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "pnpm": {
    "overrides": {
      "form-data@<2.5.4": ">=2.5.4",
      "form-data@>=3.0.0 <3.0.4": ">=3.0.4",
      "form-data@>=4.0.0 <4.0.4": ">=4.0.4",
      "jspdf@<3.0.1": ">=3.0.1",
      "jspdf@<=3.0.1": ">=3.0.2",
      "undici@>=6.0.0 <6.21.2": ">=6.21.2",
      "dompurify@<3.2.4": ">=3.2.4",
      "js-yaml@<4.1.1": ">=4.1.1",
      "brace-expansion@<2.0.2": ">=2.0.2",
      "glob@>=10.3.7 <=11.0.3": ">=11.1.0",
      "baseline-browser-mapping": "^2.9.0"
    },
    "onlyBuiltDependencies": [
      "core-js",
      "esbuild",
      "protobufjs",
      "re2",
      "sharp",
      "unrs-resolver"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
