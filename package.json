{
  "name": "lrda_website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:emulators": "pnpm --filter web dev:emulators",
    "dev:full": "pnpm clear-ports && concurrently -k -n services,firebase,server,web -c blue,yellow,green,cyan \"pnpm services:up --wait\" \"pnpm firebase:emulators\" \"sleep 5 && pnpm --filter server dev\" \"sleep 3 && pnpm --filter web dev:emulators\"",
    "dev:backend": "concurrently -k -n services,server -c blue,green \"pnpm services:up --wait\" \"sleep 5 && pnpm --filter server dev\"",
    "services:up": "./scripts/services-up.sh",
    "services:down": "docker compose -f packages/server/docker-compose.yml down",
    "clear-ports": "lsof -ti:3000 -ti:3001 -ti:8080 -ti:9000 -ti:9099 -ti:9199 -ti:4000 2>/dev/null | xargs kill -9 2>/dev/null || true",
    "build": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "pnpm --filter web lint",
    "lint:fix": "pnpm --filter web lint:fix",
    "test": "pnpm --filter web test",
    "test:unit": "pnpm --filter web test:unit",
    "test:e2e": "pnpm --filter web test:e2e",
    "test:e2e:ui": "pnpm --filter web test:e2e:ui",
    "test:e2e:headed": "pnpm --filter web test:e2e:headed",
    "test:e2e:debug": "pnpm --filter web test:e2e:debug",
    "test:e2e:install": "pnpm --filter web test:e2e:install",
    "clear-port": "./scripts/clear-port.sh",
    "docker:up": "cd packages/server && docker compose up -d",
    "docker:down": "cd packages/server && docker compose down",
    "firebase:emulators": "firebase emulators:start",
    "firebase:emulators:export": "firebase emulators:export ./firebase-emulator-data",
    "firebase:emulators:import": "firebase emulators:start --import=./firebase-emulator-data",
    "setup": "cp packages/web/.env.example packages/web/.env.local && cp packages/server/.env.example packages/server/.env && echo 'Created .env.local and .env files - ready for pnpm dev:full'"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "pnpm": {
    "overrides": {
      "form-data@<2.5.4": ">=2.5.4",
      "form-data@>=3.0.0 <3.0.4": ">=3.0.4",
      "form-data@>=4.0.0 <4.0.4": ">=4.0.4",
      "jspdf@<3.0.1": ">=3.0.1",
      "jspdf@<=3.0.1": ">=3.0.2",
      "undici@>=6.0.0 <6.21.2": ">=6.21.2",
      "dompurify@<3.2.4": ">=3.2.4",
      "js-yaml@<4.1.1": ">=4.1.1",
      "brace-expansion@<2.0.2": ">=2.0.2",
      "glob@>=10.3.7 <=11.0.3": ">=11.1.0",
      "baseline-browser-mapping": "^2.9.0"
    },
    "onlyBuiltDependencies": [
      "@firebase/util",
      "core-js",
      "esbuild",
      "protobufjs",
      "re2",
      "sharp",
      "unrs-resolver"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
