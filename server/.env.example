# =============================================================================
# Where's Religion? Server - Environment Variables
# =============================================================================
# Copy this file to .env: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# RERUM API Configuration
# -----------------------------------------------------------------------------
# These configure the local RERUM-compatible API server
# Default values work with the Docker setup
#
RERUM_API_VERSION=1.0.0
RERUM_BASE=localhost:3001
RERUM_PREFIX=localhost:3001/v1/
RERUM_ID_PREFIX=localhost:3001/v1/id/
RERUM_AGENT_CLAIM=localhost:3001/agent
RERUM_CONTEXT=localhost:3001/v1/context.json
RERUM_API_DOC=localhost:3001/v1/API.html

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
# Default values match the docker-compose.yml setup
# Change these if you're using a different MongoDB instance
#
MONGO_CONNECTION_STRING=mongodb://root:example@localhost:27017/
MONGO_DB=testdb
MONGO_COLLECTION=testcollection

# -----------------------------------------------------------------------------
# Server Status Flags
# -----------------------------------------------------------------------------
# DOWN=true will return 503 for all requests (maintenance mode)
# READONLY=true will reject all write operations
#
DOWN=false
READONLY=false

# -----------------------------------------------------------------------------
# Authentication Settings
# -----------------------------------------------------------------------------
# DISABLE_AUTH=true: Bypasses Firebase authentication (for local development)
# DISABLE_AUTH=false: Enforces Firebase authentication (for production)
#
# When DISABLE_AUTH=false, you need a valid Firebase service account file
#
DISABLE_AUTH=true

# -----------------------------------------------------------------------------
# Firebase Admin SDK (Required when DISABLE_AUTH=false)
# -----------------------------------------------------------------------------
# Path to your Firebase service account JSON file
# To get this file:
#   1. Go to Firebase Console > Project Settings > Service Accounts
#   2. Click "Generate new private key"
#   3. Save the file as firebase-admin.json in the server/ directory
#   4. NEVER commit this file to git (it's in .gitignore)
#
# Request the file from your team lead for the shared dev project
#
GOOGLE_APPLICATION_CREDENTIALS=./firebase-admin.json