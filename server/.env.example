# Server configuration for LRDA API gateway
# Copy this file to .env and fill in the values

# Port for the server
PORT=4000

# Disable auth in development (set to 'true' to bypass Firebase auth)
DISABLE_AUTH=false

# Provide your Firebase service account JSON as a single-line JSON string
# or provide the path to the JSON file
# Example (single-line JSON string):
# FIREBASE_SERVICE_ACCOUNT={"type":...}

# Or point to a file path (absolute or relative to this server folder)
# FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json
